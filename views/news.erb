<div class="container">
    <div class-"row centered mt mb">
        <div class="col-lg-8 col-lg-offset-2">
                <h1>My News Stories</h1>
                <ul>
                <% @results.each do |result| %>
                    <li>
                        <a href="<%= result.uri %>"><%= result.title %></a> <%= result.content %>
                    </li>
                <% end %>
                </ul>
        </div>
    </div>
</div>      

